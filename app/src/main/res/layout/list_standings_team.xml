<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="410dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="410dp"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/points"
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:layout_marginStart="365dp"
            android:gravity="center"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/playedGames"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/playedGames"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_marginStart="340dp"
            android:gravity="center"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/lost"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lost"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_marginStart="315dp"
            android:gravity="center"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/draw"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/draw"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_marginStart="290dp"
            android:gravity="center"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/won"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/won"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_marginStart="265dp"
            android:gravity="center"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/form"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/form"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginStart="190dp"
            android:gravity="center"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/nameTeam"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nameTeam"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginStart="90dp"
            android:gravity="center"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/emblem"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/positionTeam"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/emblem"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toEndOf="@+id/positionTeam"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>
</FrameLayout>